{% extends 'base.html.twig' %}

{% block title %}
	{{ "navbar.items.home" | trans }}
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/components/card-info.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1 class="gradient-text text-center pt-3 mb-5" leet-speak inverse>{{ 'report.title' | trans }}</h1>
        <form id="formNewReport" method="POST" action="{{ url('reports_post') }}">
            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <input type="text" id="name" class="form-control" placeholder="{{ 'report.name' | trans }}" name="name" maxlength="30" required autofocus>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <input type="text" id="firstname" class="form-control" placeholder="{{ 'report.firstname' | trans }}" name="firstname" maxlength="30" required>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <input type="date" id="date" name="date" class="form-control" required>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <input type="text" id="place" class="form-control" placeholder="{{ 'report.place' | trans }}" name="place" required>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-6">
                    <hr />
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <input type="number" id="tempAir" class="form-control" placeholder="{{ 'report.tempAir' | trans }}" name="tempAir">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <input type="number" id="tempWater" class="form-control" placeholder="{{ 'report.tempWater' | trans }}" name="tempWater">
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-6">
                    <hr />
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <select name="pollution" id="pollution-select">
                        <option value="" selected hidden>{{ 'report.pollution.title' | trans}}</option>
                        <option value="very_low">{{ 'report.pollution.verylow' | trans}}</option>
                        <option value="low">{{ 'report.pollution.low' | trans}}</option>
                        <option value="medium">{{ 'report.pollution.medium' | trans}}</option>
                        <option value="high">{{ 'report.pollution.high' | trans}}</option>
                        <option value="very_high">{{ 'report.pollution.veryhigh' | trans}}</option>
                    </select>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-6">
                    <hr />
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-10 text-center">
                    <input type="checkbox" name="checkVerify" id="checkValidate" required leet-speak inverse>
                    <label for="checkValidate">{{ 'report.validate' | trans }}</label>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <button id="buttonSubmit" type="submit" name="submit" class="btn gradient text-white" leet-speak inverse>{{ 'report.add' | trans}}</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}

