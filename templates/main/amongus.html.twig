{% extends 'baseamongus.html.twig' %}

{% block title %}
    {{ "navbar.items.home" | trans }}
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/components/card-info.css') }}">
   <link rel="stylesheet" href="{{ asset('css/drag.css') }}">
{% endblock %}

{% block body %}


	{% set skill = ["home.cards.developpement" | trans, "home.cards.reseau" | trans, "home.cards.gestion" | trans, "home.cards.marketing" | trans] %}
	{% set domain = ["home.cards.technique" | trans, "home.cards.technique" | trans, "home.cards.humain" | trans, "home.cards.humain" | trans] %}

    <div class="hint2">
        <div id="gifHint2">
            <img style="display: none;" id="crewmate" src="{{ asset('images/walk1.webp') }}">
        </div>
        
    
            <div class="home-jumbotron gradient">
                <div class="jumbotron-text">
                    <h1 class="big-title px-5" leet-speak>{{ "home.jumbotron.title" | trans }}</h1>
                    <p class="mt-5" leet-speak>{{ "home.jumbotron.description" | trans }}</p>
                </div>
                <div class="mt-5 jumbotron-down-arrow">
                    <h2 class="text-white">
                        <i class="fas fa-chevron-down" onClick="MakeCrewmateMove.move()"></i>
                    </h2>
                </div>
            </div>
    


            <div class="hint1">
                <div id="gifHint1" class="row" style="z-index: 500000">
                    <img style="display: none;" id="hint1" src="{{ asset('images/sus1.webp') }}">
                </div>
                <section id="main">
                    <div id="main-title">
                        <h1 class="gradient-text" leet-speak inverse>{{ "home.main.title" | trans }}</h1>
                    </div>

                    <div class="container-fluid" id="cards">

                        <div class="row justify-content-center">
                            {% for i in 1..4 %}
                                {% include "components/card-info.html.twig" with {
                                    type: i,
                                    skill: skill[i-1],
                                    domain: domain[i-1]
                                }%}
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>

            <div class="container-fluid">
                <div class="row">
                    <div id="draggablediv" class="ui-widget-content">
                        <img id="bullet"  src="{{ asset('images/dolphin.png') }}">
                    </div>
                </div>
            </div>

            <section id="compteur" class="gradient">
                <p id="title-compteur"></p>
                <div id="compteur-dates">
                    <div class="element-date">
                        <div id="jours"></div>
                        <div leet-speak>{{ 'home.compteur.jours' | trans }}</div>
                    </div>
                    <div class="date-divider"></div>
                    <div class="element-date">
                        <div id="heures"></div>
                        <div leet-speak>{{ 'home.compteur.heures' | trans }}</div>
                    </div>
                    <div class="date-divider"></div>
                    <div class="element-date">
                        <div id="minutes"></div>
                        <div leet-speak>{{ 'home.compteur.minutes' | trans }}</div>
                    </div>
                    <div class="date-divider"></div>
                    <div class="element-date">
                        <div id="secondes"></div>
                        <div leet-speak>{{ 'home.compteur.secondes' | trans }}</div>
                    </div>
                </div>
            </section>


            <section id="leetpopup">
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                zizi
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/Home.js') }}"></script>
	<script src="{{ asset('js/DragAmongUs.js') }}"></script>
    <script src="{{ asset('js/MakeCrewmateMove.js') }}"></script>


	<script>
		Home.traduction = {
			avant: "{{ 'home.compteur.avant' | trans }}",
			pendant: "{{ 'home.compteur.pendant' | trans }}",
			apres: "{{ 'home.compteur.apres' | trans }}"
		}
	</script>
{% endblock %}

