{% extends 'base.html.twig' %}

{% block title %}
	{{ "navbar.items.write" | trans }}
{% endblock %}

{% block body %}


<div class="container-fluid pt-5">
   <div class="row justify-content-center">
      <div class="col-11 col-sm-10 col-md-8 col-lg-7 col-xl-6">

         {% if app.request.get('error') is defined and app.request.get('error') == 'csrf-token' %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert" leet-speak inverse>
               {{ "error.form.csrf" | trans }}
               <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
               </button>
            </div>
         {% endif %}

         <h1 class="text-center" leet-speak inverse>{{ "write.title" | trans }}</h1>
         <form method="POST" action="{{ url('write_article_post') }}" class="mt-4">
            <div class="form-group">
               <label for="title" leet-speak inverse>{{ "write.input.title" | trans }}</label>
               <input type="text" class="form-control" id="title" maxLength="1000" required autofocus name="title" aria-describedby="titreHelp" placeholder="{{ 'write.input.placeholder.title' | trans }}">
            </div>
            <div class="form-group">
               <label for="content" leet-speak inverse>{{ "write.input.content" | trans }}</label>
               <textarea class="form-control" id="content" required placeholder="{{ 'write.input.placeholder.content' | trans }}" name="content" style="max-height:500px; height: 200px"></textarea>
            </div>
            <input type="hidden" name="token" value="{{ csrf_token('post-article') }}"/>
            <button type="submit" class="btn gradient text-white" leet-speak inverse>{{ "write.input.button" | trans }}</button>
         </form>
      </div>
   </div>
</div>


{% endblock %}
