{% extends 'base.html.twig' %}

{% block title %}{{ "post.full.page.title" | trans }} - {{ post.title }}{% endblock %}

{% block body %}


<div class="container-fluid mt-5">
   <div class="row justify-content-center">
      <div class="col-10">
         <a href="{{ url('posts') }}" class="btn gradient text-white btn-sm" leet-speak inverse>&lt; {{ "post.full.button.back" | trans }}</a>
         <h3 class="text-center" leet-speak inverse>{{ post.title }}</h3>
         <small class="text-muted mt-3" leet-speak inverse>
            {{ "post.full.written.by" | trans }} {{ post.user.username }}<br>{{ post.createdAt|date("d/m/Y") }}
         </small>

         <div class="mt-3" leet-speak inverse>
            {{ post.content }}
         </div>

         <h2 class="gradient-text pb-4 pt-5" leet-speak inverse>{{ "post.full.lastPosts" | trans }}</h2>

         {% if lastPosts|length > 0 %}
         
         <div class="row">
            {% for post in lastPosts %}
               <div class="col-12 col-md-6 col-lg-4 mt-3 mt-lg-0">
                  <div class="card">
                     <div class="card-header admin-card-title" leet-speak inverse>{{ post.title }}</div>
                     <div class="card-body ">
                        <div class="post-list-content" leet-speak inverse>
                           {{ post.content }}
                        </div>
                        <a href="{{ url('post', {post: post.id}) }}" class="btn gradient text-white mt-3" leet-speak inverse>{{ "post.full.lastPosts.button.read" | trans }}</a>
                     </div>
                  </div>
               </div>
            {% endfor %}
         </div>
         {% else %}
            <h5 leet-speak inverse>{{ "post.full.lastPosts.empty" | trans }}</h5>
         {% endif %}

      </div>
   </div>
</div>


{% endblock %}

